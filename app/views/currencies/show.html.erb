<div class="container">
  <div class="mb-3">
    <%= link_to "â† Back to Currencies", currencies_path, class: "btn btn-outline-secondary" %>
  </div>
  
  <h1><%= @currency.name %> Price History</h1>
  <p class="text-muted">Symbol: <code><%= @currency.symbol %></code></p>
  
  <% if @price_snapshots.any? %>
    <div class="card">
      <div class="card-header">
        <h2>Price Snapshots</h2>
        <small class="text-muted">Showing <%= @price_snapshots.count %> of <%= @price_snapshots.total_count %> records</small>
      </div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Last Price</th>
              <th>Bid</th>
              <th>Ask</th>
              <th>Spread</th>
              <th>Spread %</th>
              <th>Captured At</th>
            </tr>
          </thead>
          <tbody>
            <% @price_snapshots.each do |snapshot| %>
              <tr>
                <td>
                  <strong class="text-success">$<%= number_with_precision(snapshot.last, precision: 2) %></strong>
                </td>
                <td>$<%= number_with_precision(snapshot.bid, precision: 2) %></td>
                <td>$<%= number_with_precision(snapshot.ask, precision: 2) %></td>
                <td>$<%= number_with_precision(snapshot.spread, precision: 2) %></td>
                <td><%= number_with_precision(snapshot.spread_percentage, precision: 2) %>%</td>
                <td><%= snapshot.formatted_captured_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-4">
          <nav aria-label="Price history pagination">
            <%= paginate @price_snapshots, theme: 'bootstrap5', window: 2 %>
          </nav>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No price data available</h4>
      <p>No price snapshots have been captured for <%= @currency.name %> yet.</p>
      <p>Use the "Capture Latest Prices" button on the main page to fetch current prices.</p>
    </div>
  <% end %>
</div>
